{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "common/*": ["src/app/components/common/*"],
      "modules/*": ["src/app/components/modules/*"],
      "navigators/*": ["src/app/components/navigators/*"],
      "config/*": ["src/config/*"],
      "config": ["src/config/index"],
      "ducks/*": ["src/app/ducks/*"],
      "ducks": ["src/app/ducks/index"],
      "images/*": ["src/app/static/images/*"],
      "services/*": ["src/app/services/*"],
      "store": ["src/app/store"],
      "styles/*": ["src/app/styles/*"],
      "styles": ["src/app/styles/index"],
      "types": ["src/app/types/index"],
      "vectors/*": ["src/app/static/vectors/*"],
      "styled-components": ["src/app/services/styled-components"]
    },
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": ["node_modules", "**/*.json", "**/*.spec.ts"]
}